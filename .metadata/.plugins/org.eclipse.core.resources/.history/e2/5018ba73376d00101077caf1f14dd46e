package come.example.oops;

public class Employee {

    private int id;
    private String name;
    private double salary;

    public void setId(int id) {
        this.id = id;
    }

    public void setName(String name) {
        this.name = name.trim(); // Trim whitespace from name
    }

    public void setSalary(double salary) {
        if (salary > 50000) {
            System.out.println("Salary should be less than 50000. Salary not set.");
            this.salary = 0; // Optional fallback value
        } else {
            this.salary = salary;
        }
    }

    public int getId() {
        return id;
    }

    public String getName() {
        return name;
    }

    public double getSalary() {
        return salary;
    }

    public static void main(String[] args) {
        Employee employee = new Employee();
        employee.setId(101);
        employee.setName("  Sofiya  "); // Extra spaces to demonstrate trim
        employee.setSalary(60000);      // Exceeds limit â†’ warning

        System.out.println("Employee ID: " + employee.getId());
        System.out.println("Employee Name: " + employee.getName());
        System.out.println("Employee Salary: " + employee.getSalary());
    }
}


